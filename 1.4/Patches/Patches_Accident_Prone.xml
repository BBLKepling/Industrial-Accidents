<?xml version="1.0" encoding="utf-8" ?>
<Patch>
<!-- Production Table Examples -->
  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/ThingDef[
      defName="FueledSmithy" or 
      defName="ElectricSmithy"
    ]</xpath>
    <value>
      <li Class="Industrial_Accidents.IAccidentModExtension">
        <complexity>2</complexity>
        <accidentType>medieval</accidentType>
      </li>
    </value>
  </Operation>

  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/ThingDef[
      defName="ElectricSmelter"
    ]</xpath>
    <value>
      <li Class="Industrial_Accidents.IAccidentModExtension">
        <complexity>2</complexity>
        <accidentType>industrial</accidentType>
      </li>
    </value>
  </Operation>

  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/ThingDef[
      defName="TableMachining"
    ]</xpath>
    <value>
      <li Class="Industrial_Accidents.IAccidentModExtension">
        <complexity>5</complexity>
        <accidentType>industrial</accidentType>
      </li>
    </value>
  </Operation>

  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/ThingDef[
      defName="FabricationBench"
    ]</xpath>
    <value>
      <li Class="Industrial_Accidents.IAccidentModExtension">
        <complexity>10</complexity>
        <accidentType>industrial</accidentType>
      </li>
    </value>
  </Operation>

  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/ThingDef[
      defName="CraftingSpot" or 
      defName="TableStonecutter"
    ]</xpath>
    <value>
      <li Class="Industrial_Accidents.IAccidentModExtension">
        <complexity>0</complexity>
        <accidentType>neolithic</accidentType>
      </li>
    </value>
  </Operation>

  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/ThingDef[ 
      defName="TableSculpting"
    ]</xpath>
    <value>
      <li Class="Industrial_Accidents.IAccidentModExtension">
        <complexity>0</complexity>
        <accidentType>neolithic</accidentType>
        <skillDef>Artistic</skillDef><!-- overwrite the default skill -->
      </li>
    </value>
  </Operation>

  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/ThingDef[
      defName="ElectricStove" or 
      defName="FueledStove"
    ]</xpath>
    <value>
      <li Class="Industrial_Accidents.IAccidentModExtension">
        <complexity>0</complexity>
        <accidentType>cooking</accidentType>
      </li>
    </value>
  </Operation>

  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/ThingDef[
      defName="SimpleResearchBench"
    ]</xpath>
    <value>
      <li Class="Industrial_Accidents.IAccidentModExtension">
        <complexity>0</complexity>
        <accidentType>indresearch</accidentType>
      </li>
    </value>
  </Operation>

  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/ThingDef[
      defName="HiTechResearchBench"
    ]</xpath>
    <value>
      <li Class="Industrial_Accidents.IAccidentModExtension">
        <complexity>0</complexity>
        <accidentType>spaceresearch</accidentType>
      </li>
    </value>
  </Operation>

  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/ThingDef[
      defName="BiofuelRefinery"
    ]</xpath>
    <value>
      <li Class="Industrial_Accidents.IAccidentModExtension">
        <complexity>2</complexity>
        <accidentType>chemfuel</accidentType>
      </li>
    </value>
  </Operation>
<!-- Recipe Product Examples -->
  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/ThingDef[
      defName="GoJuice" or 
      defName="WakeUp"
    ]</xpath>
    <value>
      <li Class="Industrial_Accidents.IAccidentModExtension">
        <complexity>10</complexity>
        <accidentType>methlab</accidentType>
      </li>
    </value>
  </Operation>
<!-- RecipeDef Examples -->
  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/RecipeDef[
      defName="ButcherCorpseFlesh"
    ]</xpath>
    <value>
      <li Class="Industrial_Accidents.IAccidentModExtension">
        <complexity>0</complexity>
        <accidentType>butchery</accidentType>
      </li>
    </value>
  </Operation>

  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/RecipeDef[
      @Name="ButcherCorpseMechanoidBase"
    ]</xpath>
    <value>
      <li Class="Industrial_Accidents.IAccidentModExtension">
        <complexity>3</complexity><!-- this will stack -->
        <accidentType>mechanoid</accidentType>
      </li>
    </value>
  </Operation>

</Patch>